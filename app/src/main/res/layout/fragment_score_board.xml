<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scoreBoard.ScoreBoardFragment">

    <ImageView
        android:id="@+id/resetLifeTotalsImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/ic_baseline_refresh_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/diceRollImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/die_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/opponentDieRollImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/die_3"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opponentLifeTextView" />

    <ImageView
        android:id="@+id/yourDiceRollImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/die_3"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/lifeTotalTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/opponentLifeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:rotation="-180"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20" />

    <ImageView
        android:id="@+id/removeOpponentLifeTotalImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_remove_24"
        app:layout_constraintBottom_toBottomOf="@+id/opponentLifeTextView"
        app:layout_constraintEnd_toStartOf="@+id/opponentLifeTextView"
        app:layout_constraintTop_toTopOf="@+id/opponentLifeTextView" />

    <ImageView
        android:id="@+id/addOpponentLifeTotalImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@+id/opponentLifeTextView"
        app:layout_constraintStart_toEndOf="@+id/opponentLifeTextView"
        app:layout_constraintTop_toTopOf="@+id/opponentLifeTextView" />

    <TextView
        android:id="@+id/lifeTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="20" />

    <ImageView
        android:id="@+id/removeLifeTotalImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_remove_24"
        app:layout_constraintBottom_toBottomOf="@+id/lifeTotalTextView"
        app:layout_constraintStart_toEndOf="@+id/lifeTotalTextView"
        app:layout_constraintTop_toTopOf="@+id/lifeTotalTextView" />

    <ImageView
        android:id="@+id/addLifeTotalImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@+id/lifeTotalTextView"
        app:layout_constraintEnd_toStartOf="@+id/lifeTotalTextView"
        app:layout_constraintTop_toTopOf="@+id/lifeTotalTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>